erDiagram
    PATIENTS ||--o{ APPOINTMENTS : "schedules"
    APPOINTMENTS ||--|| ASSESSMENTS : "generates"
    APPOINTMENTS ||--o{ DIAGNOSTIC_TESTS : "orders"
    DIAGNOSTIC_TESTS ||--|| TEST_RESULTS : "produces"
    STAFF ||--o| DOCTORS : "specializes_as"
    DOCTORS ||--o{ APPOINTMENTS : "assigned_to"
    DOCTORS ||--o{ ASSESSMENTS : "performs"
    DOCTORS ||--o{ TEST_RESULTS : "reviews"
    DIAGNOSTIC_CENTERS ||--o{ DIAGNOSTIC_TESTS : "processes"
    STAFF ||--o{ DIAGNOSTIC_TESTS : "performs_technical"

    PATIENTS {
        NUMBER patient_id PK
        VARCHAR2 first_name
        VARCHAR2 last_name
        DATE date_of_birth
        CHAR gender
        VARCHAR2 phone
        VARCHAR2 email
        VARCHAR2 street_address
        VARCHAR2 city
        CHAR state
        VARCHAR2 zip_code
        VARCHAR2 insurance_provider
        VARCHAR2 insurance_number
        DATE registered_date
    }

    STAFF {
        NUMBER staff_id PK
        VARCHAR2 first_name
        VARCHAR2 last_name
        VARCHAR2 role
        VARCHAR2 phone
        VARCHAR2 email
        DATE hire_date
        VARCHAR2 employment_status
        VARCHAR2 department
    }

    DOCTORS {
        NUMBER doctor_id PK
        NUMBER staff_id FK
        VARCHAR2 specialty
        VARCHAR2 subspecialty
        VARCHAR2 medical_license_number
        VARCHAR2 board_certification
        DATE license_expiry_date
        NUMBER years_experience
        CHAR is_attending
        CHAR can_prescribe
    }

    APPOINTMENTS {
        NUMBER appointment_id PK
        NUMBER patient_id FK
        DATE scheduled_date
        VARCHAR2 scheduled_time
        VARCHAR2 appointment_type
        VARCHAR2 status
        NUMBER doctor_id FK
        VARCHAR2 room_number
        VARCHAR2 triage_level
        DATE arrival_time
        DATE discharge_time
    }

    ASSESSMENTS {
        NUMBER assessment_id PK
        NUMBER appointment_id FK
        NUMBER doctor_id FK
        VARCHAR2 chief_complaint
        VARCHAR2 vital_signs
        VARCHAR2 blood_pressure
        NUMBER temperature
        NUMBER pulse
        NUMBER respiratory_rate
        NUMBER oxygen_saturation
        CLOB assessment_notes
        VARCHAR2 preliminary_diagnosis
        NUMBER severity_level
        DATE assessment_date
        VARCHAR2 assessment_time
    }

    DIAGNOSTIC_TESTS {
        NUMBER test_id PK
        NUMBER appointment_id FK
        NUMBER diagnostic_center_id FK
        VARCHAR2 test_type
        VARCHAR2 test_name
        DATE ordered_date
        VARCHAR2 ordered_time
        NUMBER ordered_by_doctor_id FK
        DATE performed_date
        VARCHAR2 performed_time
        NUMBER technician_id FK
        VARCHAR2 status
        VARCHAR2 priority
        VARCHAR2 specimen_type
    }

    TEST_RESULTS {
        NUMBER result_id PK
        NUMBER test_id FK
        VARCHAR2 result_value
        DATE result_date
        VARCHAR2 result_time
        CHAR is_normal
        VARCHAR2 reference_range
        CLOB notes
        NUMBER reviewed_by_doctor_id FK
        DATE reviewed_date
        VARCHAR2 interpretation
        CHAR is_critical
    }

    DIAGNOSTIC_CENTERS {
        NUMBER center_id PK
        VARCHAR2 center_name
        VARCHAR2 center_type
        VARCHAR2 street_address
        VARCHAR2 city
        CHAR state
        VARCHAR2 zip_code
        VARCHAR2 phone
        VARCHAR2 fax
        VARCHAR2 email
        VARCHAR2 operating_hours
        VARCHAR2 accreditation
        CHAR is_active
        DATE established_date
    }
